extends ./layouts/index
block styles
  link(rel="stylesheet", href="/css/error.css")
block content
  .container
    .row
      .col-md-12
        .error-template
          h1
            | Oops!
          h2
            | #{message}
          .error-details
            | Sorry, an error has occured, Requested page not found!
          .error-actions
            a.btn.btn-primary.btn-lg(href='/')
              span
                | Take Me Home
          .error-actions
          if(error)
            | #{JSON.stringify(error)}

